@model Inventario.Models.Proveedor

@{
    ViewData["Title"] = "Editar Proveedor";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="container mt-4">
    <h4 class="text-center">Proveedor</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="ProveedorId" />

                <div class="form-group">
                    <label asp-for="Nombre" class="font-weight-bold"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre del proveedor" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Telefono" class="font-weight-bold"></label>
                    <input asp-for="Telefono" class="form-control" placeholder="Teléfono del proveedor" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="font-weight-bold"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Correo electrónico" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Direccion" class="font-weight-bold"></label>
                    <input asp-for="Direccion" class="form-control" placeholder="Dirección" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Activo" class="font-weight-bold"></label>
                    <select asp-for="Activo" class="form-control">
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                    <span asp-validation-for="Activo" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <input type="submit" value="Guardar" class="btn btn-primary mr-2" />
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
